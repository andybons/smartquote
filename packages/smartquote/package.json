{
  "name": "smartquote",
  "version": "0.1.0",
  "description": "Smart quote conversion utilities and ESLint rule for typographically correct quotes",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./eslint": {
      "types": "./dist/eslint/index.d.ts",
      "import": "./dist/eslint/index.js",
      "default": "./dist/eslint/index.js"
    },
    "./ai-sdk": {
      "types": "./dist/ai-sdk/index.d.ts",
      "import": "./dist/ai-sdk/index.js",
      "default": "./dist/ai-sdk/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "bench": "vitest bench",
    "lint": "eslint src",
    "check-types": "tsc --noEmit",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "keywords": [
    "smart-quotes",
    "typography",
    "curly-quotes",
    "eslint",
    "eslint-plugin",
    "markdown"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/eslint": "^9.6.1",
    "@types/estree": "^1.0.8",
    "@types/node": "^25.0.3",
    "ai": "^6.0.25",
    "eslint": "^9.39.2",
    "tsup": "^8.5.1",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "ai": ">=6.0.0",
    "eslint": ">=8.0.0"
  },
  "peerDependenciesMeta": {
    "ai": {
      "optional": true
    },
    "eslint": {
      "optional": true
    }
  }
}
